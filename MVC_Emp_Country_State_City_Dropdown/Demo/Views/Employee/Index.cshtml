@model IEnumerable<Demo .Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<div id="view-all">
    @await Html.PartialAsync("_ViewAll" , Model)
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}




<h3>Employees by Country</h3>

<form method="get" asp-action="EmployeesByCountry" asp-controller="Employee">
    <div class="form-group">
        <label for="EmployeesByCountry">Search by Country:</label>
        <input type="text" class="form-control" id="EmployeesByCountry" name="CountryName" value="@ViewBag.SearchString" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form> 


